<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="sample_type_attribute.url.generator" class="Cscr\SlimsApiBundle\Service\SampleTypeDocumentAttributeUrlGenerator">
            <argument type="service" id="router" />
        </service>
        <service id="sample_type_attribute.event_listener" class="Cscr\SlimsApiBundle\EventListener\SampleTypeAttributeListener">
            <argument type="service" id="sample_type_attribute.url.generator" />
            <tag name="doctrine.event_listener" event="postLoad" />
        </service>
    </services>
</container>
